<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="220px"
        android:layout_height="255px"
        android:src="@drawable/imgnotfound"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Comprar"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdbtnSelect"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/imgProducto"/>


    <LinearLayout
        android:layout_marginLeft="13mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/lblNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Laptop"
            android:textSize="25sp" />

        <TextView android:id="@+id/lblId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Id: 1"
            android:textSize="12sp" />

        <TextView android:id="@+id/lblCanti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Cantidad: 1"
            android:textSize="12sp" />

        <TextView android:id="@+id/lblUbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="UbicaciÃ³n: "
            android:textSize="12sp" />

        <TextView android:id="@+id/lblEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Usado"
            android:textSize="12sp" />

        <TextView android:id="@+id/lblPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Precio: 250$"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>